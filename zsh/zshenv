# -*- mode: sh -*- 
# .zshenv

export PATH="$HOME/.local/bin:$PATH"

# preferred tools
export EDITOR="vim"
#export PAGER="vimpager"
export PAGER="most"
export BROWSER="firefox"


# tool options
export GREP_OPTIONS="--color=auto"
export GREP_COLOR="1;32" #green
export WORKON_HOME=~/.virtualenvs
export PIP_DOWNLOAD_CACHE=~/.pip/download-cache
export TERM=xterm-256color

# misc options
export GTK2_RC_FILES="$HOME/.gtkrc-2.0"

# program options
export DOTREMINDERS="$HOME/org/reminders"

# go
export GOPATH="$HOME/.local/go"

# perl locallib
export PERL_LOCAL_LIB_ROOT="/home/gv/.perl5"
export PERL_MB_OPT="--install_base /home/gv/.perl5"
export PERL_MM_OPT="INSTALL_BASE=/home/gv/.perl5"
export PERL5LIB="/home/gv/.perl5/lib/perl5/x86_64-linux-thread-multi:/home/gv/.perl5/lib/perl5"
export PATH="/home/gv/perl5/bin:$PATH"

fpath=(~/.zfunc $fpath)
typeset -U fpath

path=(\
  $HOME/bin \
  $HOME/.local/bin \
  $HOME/.luarocks/bin \
  $HOME/.cabal/bin \
  $HOME/.dotfiles/bin \
  $HOME/.dotfiles/util-co/bin \
  $HOME/.local/go/bin \
  $HOME/.perl5/bin \
  /usr/pgsql-9.3/bin/ \
  /opt/nodejs/bin/ \
  /opt/mathematica/bin/ \
  $path )
typeset -U path

[[ -f $HOME/.zshenv.local ]] && . $HOME/.zshenv.local
