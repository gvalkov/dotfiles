# .zshenv

export PATH="$HOME/.local/bin:$PATH"

# preferred tools
export EDITOR="vim"
export PAGER="vimpager"
export BROWSER="firefox"


# tool options
export GREP_OPTIONS="--color=auto"
export GREP_COLOR="1;32" #green
export WORKON_HOME=~/.virtualenvs
export PIP_DOWNLOAD_CACHE=~/.pip/download-cache


# program options
export DOTREMINDERS="$HOME/org/reminders"


# go
export GOROOT="$HOME/source/go"

eval `dircolors -b`

fpath=(~/.zfunc $fpath)
typeset -U fpath

path=(\
    $HOME/.local/bin \
    $HOME/bin $HOME/.dotfiles-bin \
    $HOME/.dotfiles/util-co/bin \
    $HOME/.local/go/bin \
    $GOROOT/bin \
    $path )
typeset -U path

[[ -f $HOME/.zshenv.local ]] && . $HOME/.zshenv.local
