# .zshenv

export PATH="$HOME/.local/bin:$PATH"

# preferred tools
export EDITOR="vim"
export PAGER="vimpager"
export BROWSER="firefox"


# tool options
export GREP_OPTIONS="--color=auto"
export GREP_COLOR="1;32" #green


# program options
export DOTREMINDERS="$HOME/org/reminders"

eval `dircolors -b`

fpath=(~/.zfunc $fpath)
typeset -U fpath

path=($HOME/.local/bin $HOME/bin $HOME/source/android-sdk-linux/tools/ $HOME/source/android-sdk-linux/platform-tools/ $path)
typeset -U path

[[ -f $HOME/.zshenv.local ]] && . $HOME/.zshenv.local
